<UserControl x:Class="PresentationLayer.View.CatalogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.View"
        xmlns:vmodel="clr-namespace:PresentationLayer.ViewModel"
        mc:Ignorable="d"
        Height="350" Width="600">
    <UserControl.DataContext>
        <vmodel:CatalogViewModelCollection/>
    </UserControl.DataContext>
    <DockPanel>
        <Grid>
            <ListBox HorizontalAlignment="Stretch" ItemsSource="{Binding Catalogs}" SelectedItem="{Binding Detail}" Grid.Column="0" Grid.Row="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding CatalogId}" />
                            <Label Content="{Binding Title}" />
                            <Label Content="{Binding Author}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">Id:</Label>
            <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">Title:</Label>
            <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center">Author:</Label>
            <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">Number of pages:</Label>

            <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding CatalogId, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Title,  UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Author,  UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding NrOfPages,  UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="Add" Content="Add" Command="{Binding Add}" Grid.Column="0" Grid.Row="0" ClickMode="Press" Height="50"/>
            <Button x:Name="Delete" Content="Delete" Command="{Binding Delete}" Grid.Column="1" Grid.Row="0" ClickMode="Press" Height="50"/>
            <Button x:Name="Update" Content="Update" Command="{Binding Update}" Grid.Column="2" Grid.Row="0" ClickMode="Press" Height="50"/>
            <Button x:Name="Load" Content="Load" Command="{Binding Load}" Grid.Column="3" Grid.Row="0" ClickMode="Press" Height="50"/>
        </Grid>
    </DockPanel>
</UserControl>
